#!/bin/bash

set -e

# magic line to ensure that we're always inside the root of our application,
# no matter from which directory we'll run script
# thanks to it we can just enter `./bin/pytest`
cd "${0%/*}/.."

echo "Running pytest"

# Always run dc down regardless of success/failure
trap 'bin/dc down' EXIT

export ROLE=test

bin/dc up -d --remove-orphans

bin/dc exec -T runserver pytest -p no:cacheprovider --cov=apps --cov-config=.coveragerc --ds=conf.test_settings --cov-report= "$@"
